<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="webdriverProvider" class="org.jbehave.web.selenium.FirefoxWebDriverProvider">
	</bean>
	
	<bean id="perSteps" class="org.jbehave.web.selenium.PerScenarioWebDriverSteps">
		<constructor-arg ref="webdriverProvider"></constructor-arg>
	</bean>
	
	
</beans>
