<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="webdriverProvider" class="org.jbehave.web.selenium.FirefoxWebDriverProvider">
	</bean>
	
	<bean id="perStorySteps" class="org.jbehave.web.selenium.PerStoryWebDriverSteps">
		<constructor-arg ref="webdriverProvider"></constructor-arg>
	</bean>

	<bean id="pageFactory" class="org.jbehave.webdriver.sp.pages.SpPageFactory">
		<constructor-arg ref="webdriverProvider" />
	</bean>

	<bean id="loginValidationLogicSteps"
		class="org.jbehave.webdriver.steps.LoginValidationLogicSteps">
		<constructor-arg ref="pageFactory" />
	</bean>

</beans>
